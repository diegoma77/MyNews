<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SearchArticlesActivity" />
        <activity android:name=".activities.NotificationsActivity" />
        <activity
            android:name=".data.AndroidDatabaseManager"
            android:label="@string/app_name" />
        <activity android:name=".activities.DisplaySearchArticlesActivity" />
        <activity android:name=".activities.WebViewMainActivity" />
        <activity android:name=".activities.WebViewSearchActivity" />

        <receiver android:name=".broadcastreceivers.ButtonListener">
            <intent-filter>
                <action android:name="button_clicked" />
            </intent-filter>
        </receiver>
    </application>

</manifest>